.row
  %h1 Create PTO Request

= render 'shared/errors', model: @pto_request

= form_for(@pto_request) do |f|
  .row
    .large-2.columns
      = f.label :start_date, 'Start Date:'
    .large-2.columns.end
      = f.text_field :start_date, class: 'datepicker'
  .row
    .large-2.columns
      = f.label :end_date, 'End Date:'
    .large-2.columns.end
      = f.text_field :end_date, class: 'datepicker'
  .row
    .large-2.columns
      = f.label :hours, 'Hours:'
    .large-2.columns.end
      = f.text_field :hours
  .row
    .large-offset-2.large-6.columns.end
      = f.submit 'Create', class: 'button small radius'
      = link_to 'Cancel', dashboard_path, class: 'button secondary small radius'