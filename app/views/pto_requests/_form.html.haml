= form_for(@pto_request) do |f|
  .row
    .large-2.columns
      = f.label :start_date, 'Start Date:'
    .large-2.columns.end
      = f.text_field :start_date, class: 'datepicker', value: DateHelpers.concise_format(@pto_request.start_date)
  .row
    .large-2.columns
      = f.label :end_date, 'End Date:'
    .large-2.columns.end
      = f.text_field :end_date, class: 'datepicker', value: DateHelpers.concise_format(@pto_request.end_date)
  .row
    .large-2.columns
      = f.label :hours, 'Hours:'
    .large-2.columns.end
      = f.text_field :hours
  .row
    .large-2.columns
      = f.label :floating_holiday, 'Floating Holiday:'
    .large-2.columns.end
      = f.check_box :floating_holiday
  .row
    .large-offset-2.large-6.columns.end
      = f.submit button_label, class: 'button small radius'
      = link_to 'Cancel', dashboard_path, class: 'button secondary small radius'